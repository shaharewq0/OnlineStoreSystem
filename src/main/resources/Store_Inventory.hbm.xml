<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "Domain.Store.Store_Inventory" table = "STORE_INVENTORY_TABLE" lazy="false">

        <id name = "id" type = "int" column = "id">
            <generator class="increment"/>
        </id>

        <map name="items" table="SI_MAP_TABLE" cascade="all">
            <key column="Store_inv_id"/>
            <index column="Product_name" type="string"/>
            <element column="Product_bundle_id" type="string"/>
        </map>



    </class>
</hibernate-mapping>