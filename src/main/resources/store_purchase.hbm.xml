<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "Domain.Store.StorePurchase" table = "STORE_PURCHASE_TABLE">

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name="price" column="price" type="double"/>

        <list name="items" cascade="all">
            <key column="SP_ID"/>
            <index column="id"></index>
            <one-to-many class="Domain.info.ProductDetails"></one-to-many>
        </list>

        <property name="store" type="string" column="store_name"/>
    </class>
</hibernate-mapping>